scriptencoding utf-8
set ambiwidth=double
set autoindent
set autoread
set backspace=indent,eol,start
set backup
set backupdir=~/.cache/vim/backups
set directory=~/.cache/vim/swaps
set encoding=utf-8
set expandtab
set fileencodings=utf-8,sjis,cp932
set fileencoding=utf-8
set fileformats=unix,dos,mac
set hidden
set hlsearch
set ignorecase
set list
set listchars=eol:^,nbsp:%,tab:>=,trail:-
set number
set shiftwidth=2
set smartcase
set smartindent
set softtabstop=2
set swapfile
set tabstop=2
set title
set undodir=~/.cache/vim/undos
set viminfo+=n~/.cache/vim/viminfo
set virtualedit=block
set wildmenu
